{
  "compilerOptions": {
    "target": "ES2020",
    //"target": "es5",
    "module": "CommonJS",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    //"strict": false,
    //"strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*",
    "node_modules/@types/puppeteer/index.d.ts"
  ]
}